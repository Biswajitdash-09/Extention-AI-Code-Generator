{
  "name": "ai-code-generator",
  "displayName": "AI Code Generator",
  "description": "Generate project structures and code from natural language using AI (OpenAI, Gemini, Groq, Ollama)",
  "version": "1.0.0",
  "publisher": "amar-pradhan-biswajit-dash",
  "author": "Amar Pradhan && Biswajit Dash",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "galleryBanner": {
    "color": "#0b1728",
    "theme": "dark"
  },
  "keywords": [
    "ai",
    "code generation",
    "openai",
    "gemini",
    "ollama",
    "groq",
    "chatgpt"
  ],
  "activationEvents": [
    "onView:aiCodeGenerator.chatView",
    "onView:aiCodeGenerator.history"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-code-generator",
          "title": "AI Code Generator",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "ai-code-generator": [
        {
          "id": "aiCodeGenerator.chatView",
          "name": "AI Chat",
          "type": "webview",
          "icon": "images/icon.png"
        },
        {
          "id": "aiCodeGenerator.history",
          "name": "Project Generation History"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "submenu": "ai-code-generator.contextMenu",
          "group": "1_modification"
        }
      ],
      "ai-code-generator.contextMenu": [
        {
          "command": "ai-code-generator.explainCodeContext",
          "group": "1_actions@1"
        },
        {
          "command": "ai-code-generator.fixCodeContext",
          "group": "1_actions@2"
        },
        {
          "command": "ai-code-generator.improveCodeContext",
          "group": "1_actions@3"
        },
        {
          "command": "ai-code-generator.addToContext",
          "group": "1_actions@4"
        }
      ],
      "terminal/context": [
        {
          "submenu": "ai-code-generator.terminalMenu",
          "group": "2_terminal"
        }
      ],
      "ai-code-generator.terminalMenu": [
        {
          "command": "ai-code-generator.terminalAddToContext",
          "group": "1_actions@1"
        },
        {
          "command": "ai-code-generator.terminalFixCommand",
          "group": "1_actions@2"
        },
        {
          "command": "ai-code-generator.terminalExplainCommand",
          "group": "1_actions@3"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-code-generator.generateProject",
        "title": "AI: Generate Project from Task"
      },
      {
        "command": "ai-code-generator.login",
        "title": "AI: Login / Sign Up",
        "icon": "$(account)"
      },
      {
        "command": "ai-code-generator.selectModel",
        "title": "AI: Select AI Model"
      },
      {
        "command": "ai-code-generator.refreshHistory",
        "title": "Refresh History",
        "icon": "$(refresh)"
      },
      {
        "command": "ai-code-generator.clearHistory",
        "title": "Clear History",
        "icon": "$(clear-all)"
      },
      {
        "command": "ai-code-generator.openHistoryItem",
        "title": "Open Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "ai-code-generator.ghost.promptCodeSuggestion",
        "title": "AI: Quick Task (Inline Suggestion)"
      },
      {
        "command": "ai-code-generator.ghost.generateSuggestions",
        "title": "AI: Generate Smart Inline Suggestions"
      },
      {
        "command": "ai-code-generator.ghost.applyCurrentSuggestion",
        "title": "AI: Apply Current Suggestion"
      },
      {
        "command": "ai-code-generator.ghost.applyAllSuggestions",
        "title": "AI: Apply All Suggestions"
      },
      {
        "command": "ai-code-generator.ghost.cancelSuggestions",
        "title": "AI: Cancel Suggestions"
      },
      {
        "command": "ai-code-generator.ghost.goToNextSuggestion",
        "title": "AI: Go to Next Suggestion"
      },
      {
        "command": "ai-code-generator.ghost.goToPreviousSuggestion",
        "title": "AI: Go to Previous Suggestion"
      },
      {
        "command": "ai-code-generator.explainCodeContext",
        "title": "Explain Code"
      },
      {
        "command": "ai-code-generator.fixCodeContext",
        "title": "Fix Code"
      },
      {
        "command": "ai-code-generator.improveCodeContext",
        "title": "Improve Code"
      },
      {
        "command": "ai-code-generator.addToContext",
        "title": "Add to Context"
      },
      {
        "command": "ai-code-generator.terminalAddToContext",
        "title": "Add Terminal Content to Context"
      },
      {
        "command": "ai-code-generator.terminalFixCommand",
        "title": "Fix This Command"
      },
      {
        "command": "ai-code-generator.terminalExplainCommand",
        "title": "Explain This Command"
      },
      {
        "command": "ai-code-generator.generateTerminalCommand",
        "title": "AI: Generate Terminal Command"
      },
      {
        "command": "ai-code-generator.generateCommitMessage",
        "title": "AI: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-code-generator.focusChatInput",
        "title": "AI: Focus Chat Input"
      },
      {
        "command": "ai-code-generator.newChat",
        "title": "AI: New Chat Session"
      },
      {
        "command": "ai-code-generator.acceptSuggestion",
        "title": "AI: Accept Suggestion"
      },
      {
        "command": "ai-code-generator.rejectSuggestion",
        "title": "AI: Reject Suggestion"
      },
      {
        "command": "ai-code-generator.acceptAllSuggestions",
        "title": "AI: Accept All Suggestions"
      },
      {
        "command": "ai-code-generator.rejectAllSuggestions",
        "title": "AI: Reject All Suggestions"
      },
      {
        "command": "ai-code-generator.applyQuickFix",
        "title": "AI: Apply Quick Fix"
      },
      {
        "command": "ai-code-generator.refactorCode",
        "title": "AI: Refactor Code"
      },
      {
        "command": "ai-code-generator.showSuggestionDiff",
        "title": "AI: Show Suggestion Diff"
      }
    ],
    "keybindings": [
      {
        "command": "ai-code-generator.ghost.promptCodeSuggestion",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "ai-code-generator.ghost.generateSuggestions",
        "key": "ctrl+l",
        "mac": "cmd+l",
        "when": "editorTextFocus && !editorReadonly"
      },
      {
        "command": "ai-code-generator.ghost.applyCurrentSuggestion",
        "key": "tab",
        "when": "editorTextFocus && ghost.hasSuggestions && !editorTabMovesFocus && !inSnippetMode && !suggestWidgetVisible"
      },
      {
        "command": "ai-code-generator.ghost.applyAllSuggestions",
        "key": "shift+tab",
        "when": "editorTextFocus && ghost.hasSuggestions && !editorTabMovesFocus && !inSnippetMode"
      },
      {
        "command": "ai-code-generator.ghost.cancelSuggestions",
        "key": "escape",
        "when": "editorTextFocus && ghost.hasSuggestions"
      },
      {
        "command": "ai-code-generator.ghost.goToNextSuggestion",
        "key": "down",
        "when": "editorTextFocus && ghost.hasSuggestions"
      },
      {
        "command": "ai-code-generator.ghost.goToPreviousSuggestion",
        "key": "up",
        "when": "editorTextFocus && ghost.hasSuggestions"
      },
      {
        "command": "ai-code-generator.generateTerminalCommand",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "ai-code-generator.focusChatInput",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "ai-code-generator.newChat",
        "key": "alt+ctrl+c",
        "mac": "alt+cmd+c"
      },
      {
        "command": "ai-code-generator.acceptSuggestion",
        "key": "alt+a",
        "when": "editorTextFocus && ghost.hasSuggestions"
      },
      {
        "command": "ai-code-generator.rejectSuggestion",
        "key": "alt+r",
        "when": "editorTextFocus && ghost.hasSuggestions"
      },
      {
        "command": "ai-code-generator.acceptAllSuggestions",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a",
        "when": "editorTextFocus && ghost.hasSuggestions"
      },
      {
        "command": "ai-code-generator.rejectAllSuggestions",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorTextFocus && ghost.hasSuggestions"
      }
    ],
    "submenus": [
      {
        "id": "ai-code-generator.contextMenu",
        "label": "AI Code Generator"
      },
      {
        "id": "ai-code-generator.terminalMenu",
        "label": "AI Code Generator"
      }
    ],
    "configuration": {
      "title": "AI Code Generator",
      "properties": {
        "aiCodeGenerator.provider": {
          "type": "string",
          "default": "gemini",
          "enum": [
            "openai",
            "gemini",
            "groq",
            "ollama"
          ],
          "enumDescriptions": [
            "OpenAI (GPT-4o, GPT-4o-mini) - Paid",
            "Google Gemini (gemini-1.5-flash) - Free tier available",
            "Groq (llama-3.3-70b, mixtral) - Free tier available",
            "Ollama (Local models) - Free, runs locally"
          ],
          "description": "Select the AI provider to use for code generation"
        },
        "aiCodeGenerator.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key (get from platform.openai.com)"
        },
        "aiCodeGenerator.openai.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "enum": [
            "gpt-4o",
            "gpt-4o-mini",
            "gpt-4-turbo",
            "gpt-3.5-turbo"
          ],
          "description": "OpenAI model to use"
        },
        "aiCodeGenerator.gemini.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API Key (get from aistudio.google.com)"
        },
        "aiCodeGenerator.gemini.model": {
          "type": "string",
          "default": "gemini-1.5-flash",
          "enum": [
            "gemini-1.5-flash",
            "gemini-2.0-flash",
            "gemini-1.5-pro"
          ],
          "description": "Gemini model to use"
        },
        "aiCodeGenerator.groq.apiKey": {
          "type": "string",
          "default": "",
          "description": "Groq API Key (get from console.groq.com)"
        },
        "aiCodeGenerator.groq.model": {
          "type": "string",
          "default": "llama-3.3-70b-versatile",
          "enum": [
            "llama-3.3-70b-versatile",
            "llama-3.1-8b-instant",
            "mixtral-8x7b-32768"
          ],
          "description": "Groq model to use"
        },
        "aiCodeGenerator.ollama.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server base URL"
        },
        "aiCodeGenerator.ollama.model": {
          "type": "string",
          "default": "codellama",
          "description": "Ollama model to use (e.g., codellama, deepseek-coder)"
        },
        "aiCodeGenerator.enableCodeActions": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code actions and quick fixes (lightbulb suggestions)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/form-data": "^2.2.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.x",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "ts-loader": "^9.x",
    "typescript": "^5.x",
    "webpack": "^5.x",
    "webpack-cli": "^5.x"
  },
  "dependencies": {
    "archiver": "^7.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "firebase": "^12.9.0",
    "form-data": "^4.0.0",
    "nanoid": "^3.3.4",
    "node-fetch": "^2.6.7",
    "openai": "^4.x",
    "simple-git": "^3.31.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AmarPradhanDash/ai-code-generator"
  }
}
